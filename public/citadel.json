    "majorEvents": [
      {
        "year": 1300,
        "event": "The Great Siege of Vernalis",
        "outcome": "Victory",
        "description": "For 100 days, the citadel was surrounded by the armies of the Northern Alliance. Against all odds, the defenders held the walls until the enemy starved and fled under the shadow of the moon."
      },
      {
        "year": 1375,
        "event": "The Pact of Silent Ashes",
        "outcome": "Truce",
        "description": "After decades of war, the surviving lords of the realm gathered beneath the ruined halls to swear an oath of silence and peace, their hands blackened by the ashes of their fallen banners."
      },
      {
        "year": 1420,
        "event": "The Reign of the Iron Regent",
        "outcome": "Prosperity",
        "description": "Under the Iron Regent’s rule, the citadel’s walls were reforged, the forges roared anew, and trade routes extended deep into the eastern dunes, marking a rare age of light and wealth."
      },
      {
        "year": 1450,
        "event": "The Cataclysmic War",
        "outcome": "Partial Destruction",
        "description": "A storm of fire and steel swept through the valley as ancient machines awoke. Half the city fell into ruin, and the river itself ran red for three days before the silence returned."
      },
      {
        "year": 1460,
        "event": "The Rise of the Crystal Order",
        "outcome": "Reformation",
        "description": "A sect of scholars and mystics formed the Crystal Order, blending arcane arts with engineering. Their experiments restored much of what was lost, but their methods drew suspicion and fear."
      },
      {
        "year": 1470,
        "event": "Apocalipsis of Joseph",
        "outcome": "Victory",
        "description": "The mad prophet Joseph foretold the fall of all kingdoms. When his followers rose against Vernalis, they were crushed in a single night of fire and divine thunder."
      },
      {
        "year": 1471,
        "event": "Ethazium Plague",
        "outcome": "Partial Destruction",
        "description": "A cursed mist from the western marshes brought fever and delirium. Entire districts were sealed, and the healers burned incense day and night to drive away the unseen death."
      },
      {
        "year": 1490,
        "event": "The Return of the Lost Banner",
        "outcome": "Renewal",
        "description": "An expedition into the northern tundra returned the ancient banner of Vernalis, long believed lost. Its return rekindled old oaths and the spirit of unity among the survivors."
      },
      {
        "year": 1520,
        "event": "The Twilight Accord",
        "outcome": "Peace",
        "description": "In a ceremony held at dusk, the great houses of Vernalis and their former foes signed a pact to preserve the balance of realms — binding their fates under one waning sun."
      }
    ]
  }
